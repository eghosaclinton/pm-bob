{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "paths": {
      "@utils": ["packages/utils/src"],
      "@ui": ["packages/ui/src"],
      "@db": ["packages/db/index.ts"],
      "@db/schema": ["packages/db/schema/index.ts"],
      "@types": ["packages/types"]
    },
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
